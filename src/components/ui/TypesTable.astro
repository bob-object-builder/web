---
const { title, description } = Astro.props;
import { databaseTypes } from "@/assets/database-types";
const databaseTypesValue = Object.entries(databaseTypes);
---

<section class="rounded-lg shadow-md">
    {title && <h2 class="text-3xl font-bold mb-3 text-center">{title}</h2>}
    {description && <p class="text-lg mb-6 text-center">{description}</p>}

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        {
            databaseTypesValue.map(([key, value]) => (
                <div class="p-6 rounded-lg transition-shadow duration-200 border-solid border-stone-800 border-1">
                    <h3 class="text-xl font-semibold mb-3">
                        {key.toUpperCase()}
                    </h3>
                    <ul class="space-y-1 text-sm">
                        {value.map((item) => (
                            <li class="py-1 rounded transition-colors">
                                {item}
                            </li>
                        ))}
                    </ul>
                </div>
            ))
        }
    </div>
</section>
